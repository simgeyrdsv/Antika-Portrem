@model Abc.MvcWebUI.Models.Cart
@{
    ViewBag.Title = "Index";
}
<div id="product-details" class="container pb-5">
    <div class="row">
        <div class="col-md-12">

            <h2>Alışveriş Sepeti</h2>
            <hr />






            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>

                        </th>
                        <th>
                            Quantitiy
                        </th>
                        <th>
                            Product Name
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                            Sub Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartLines)
                    {
                        <tr>
                            <td>
                                <img src="~/Upload/@item.Product.Image" width="50" />
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.Product.Name
                            </td>
                            <td>
                                @item.Product.Price
                            </td>
                            <td>
                                @((item.Product.Price*item.Quantity).ToString("c"))
                            </td>
                            <td>
                                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                                {
                                    @Html.Hidden("Id", item.Product.Id)
                                    <button type="submit" class="btn btn-danger" href="/Cart">
                                        Sil
                                    </button>
                                }

                            </td>


                        </tr>
                    }                  
                    <div class="alert alert-warning" role="alert" style="width: 1100px">
                        Alışveriş Sepetinde Ürün bulunmamaktadır.
                    </div>
                    
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5"></td>
                        <td>
                            @Model.Total().ToString("c");
                        </td>
                    </tr>
                </tfoot>




            </table>

        </div>
    </div>
</div>






